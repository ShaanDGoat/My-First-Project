@using Project_Utility
@model Project_Models.Product


<form method="post" enctype="multipart/form-data">
    <div class="border p-3">

        <input asp-for="Id" hidden />

        <div class ="form-group row ">
            <h2 class="text-info pl-3">Delete Product</h2>
        </div>
        <div class="row">
            <div class="col-8">
                <div>
                <div class="form-group row">
                    <div class="col-4">
                        <label asp-for="Name"></label>
                    </div>
                    <div class="col-8">
                        <input asp-for="Name" disabled class="form-control"/>
                    </div>

                </div>
                <div class="form-group row">
                    <div class="col-4">
                        <label asp-for="Price"></label>
                    </div>
                    <div class ="col-8">
                        <input asp-for="Price" disabled class="form-control" />

                    </div> 

                  </div>
                  <div class="form-group row">
                    <div class="col-4">
                        <label asp-for="Description"></label>
                    </div>
                    <div class ="col-8">
                        <textarea asp-for="Description" disabled class="form-control summernote"></textarea>
                    </div>

                    </div>

                    <div class="form-group row">
                    <div class="col-4">
                        <label asp-for="ShortDesc"></label>
                    </div>
                    <div class ="col-8">
                        <textarea asp-for="ShortDesc" disabled class="form-control summernote"></textarea>
                    </div>

                    </div>

                    <div class="form-group row">
                    <div class="col-4">
                        <label asp-for="CategoryId"></label>
                    </div>
                    <div class ="col-8">
                        <input asp-for="Category.Name" disabled/>

                    </div>

                    </div>
                    <div class="form-group row">
                    <div class="col-4">
                        <label asp-for="ApplicationId"></label>
                    </div>
                    <div class ="col-8">
                        <input asp-for="ApplicationType.Name" disabled/>

                    </div>

                    </div>
                </div>
                 <div class="form-group row">
                     <div class="col-8 offset-4 row">
                         <div class ="col">
                             <button asp-action="DeletePost" type="submit" class="btn btn-danger w-100">Delete</button>
                         </div>

                         <div class="col">
                             <a asp-action="Index" class="btn btn-success w-100">Back</a>
                         </div>

                     </div>
                 </div>
             </div>
            <div class="col-4 p-4">
                @* Keep this empty *@
                <img scr="@WC.ImagePath@Model.Image" alt="Error" style="border-radius:5px; border:1px solid #bbb" />
            </div>
        </div>
    </div>
 </form> 
@section Scripts{

    @{<partial name="_ValidationScriptsPartial" />}

    <script>
        $(document).ready(function() {
            $('.summernote').summernote({
                height:250,
                disable:true
        });
    });
    </script>
  }

